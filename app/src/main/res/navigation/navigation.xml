<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/login2">
    <fragment
        android:id="@+id/login2"
        android:name="com.project.shope2you.LogIn.Login"
        android:label="login"
        tools:layout="@layout/login" >
        <action
            android:id="@+id/action_login2_to_signup"
            app:destination="@id/signup" />
    </fragment>
    <fragment
        android:id="@+id/signup"
        android:name="com.project.shope2you.SignUp.Signup"
        android:label="signup"
        tools:layout="@layout/signup" >
        <action
            android:id="@+id/action_signup_to_login2"
            app:destination="@id/login2" />
    </fragment>
</navigation>